    <link rel="stylesheet" href="/css/edit.css">
</head>
    <title>Edit</title>
</head>
<body>
    <h1 style="color: black; text-align: center" >EDIT</h1>
    <div class="form-div">
        <form class="mb-2" action="/library/edit/<%=book.id%>?_method=PUT" method="POST">
            <div class="form-group mb-2">
                <label for="book_name">Title</label>
                <input type="text" class="form-control" id="book_name" name="book_name" required value="<%= book.name %> ">
            </div>
            <div class="form-group mt-2 mb-2">
                <label for="author_name">Author</label>
                <input type="text" class="form-control" id="author_name" name="author_name" required value="<%= book.author %>">
            </div>
            <div class="form-group form-check mt-4">
                <label class="form-check-label" for="status">Read</label>
                <% if(book.status){ %>
                    <input type="checkbox" class="form-check-input" name="status" id="status" checked>
                <%}else{ %>
                    <input type="checkbox" class="form-check-input" name="status" id="status" >
                <%} %>
            </div>
            <button type="submit" class="btn btn-primary" id="save">Save</button>
        </form>
    </div>
</body>
</html>